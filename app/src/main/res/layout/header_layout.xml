<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:myAttr="http://schemas.android.com/com.yujin.demo"
    android:id="@+id/head_bg"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="18dp"
    android:fitsSystemWindows="true"
    app:layout_scrollFlags="scroll|enterAlways|snap">

    <!--平移时候的模糊效果-->
    <!--app:layout_collapseMode="parallax"-->
    <!--app:layout_collapseParallaxMultiplier="0.7"-->
    <com.yujin.demo.view.CircleImageView
        android:id="@+id/civ_head"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:src="@mipmap/small"
        myAttr:border_width="0dp" />

    <TextView
        android:id="@+id/ll_header_networkname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="痛并快乐着"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll_header_impression"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <com.yujin.demo.view.BorderTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="文艺青年"
            android:textColor="#FF8900"
            android:textSize="12sp"
            myAttr:followTextColor="true" />

        <com.yujin.demo.view.BorderTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="大叔控"
            android:textColor="#FF8900"
            android:textSize="12sp"
            myAttr:followTextColor="true" />

        <com.yujin.demo.view.BorderTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="开心果"
            android:textColor="#FF8900"
            android:textSize="12sp"
            myAttr:followTextColor="true" />
    </LinearLayout>

    <TextView
        android:id="@+id/ll_header_motto"
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="所有的事情到最后都会好起来的,如果不够好,说明还没到"
        android:textSize="14sp" />
</LinearLayout>